{
  "routes": [
    {
      "route": "/login",
      "rewrite": "/.auth/login/github?post_login_redirect_uri=.referrer"
    },
    {
      "route": "/logout",
      "redirect": "/.auth/logout?post_logout_redirect_uri=.referrer"
    },
    {
      "route": "/loggedIn",
      "allowedRoles": ["authenticated", "members"],
      "headers": {
        "Cache-Control": "no-store"
      }
    }
  ],
  "responseOverrides": {
    "400": {
      "rewrite": "/index.html"
    },
    "401": {
      "redirect": "/login",
      "statusCode": 302
    },
    "403": {
      "rewrite": "/index.html"
    },
    "404": {
      "rewrite": "/404.html"
    }
  }
}
